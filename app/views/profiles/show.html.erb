<% content_for(:title, t('.title')) %>
<%= render 'shared/breadcrumbs' %>
<div class="container pt-5">
  <h2 class="mb-4">プロフィール</h2>
  <div class="row">
    <%= render 'shared/account_page_side' %>
    <div class="profile col-sm-12 col-md-8 col-lg-9 my-3 d-flex flex-column align-items-center">
      <% if @user.avatar.present? %>
        <%= image_tag @user.avatar.url, class: 'rounded-circle mb-4', width: '100', height: '100' %>
      <% else %>
        <%= image_tag 'sample.jpg', class: 'rounded-circle mb-4', width: '100', height: '100' %>
      <% end %>
      <p class="mb-1 text-secondary">ユーザーネーム</p>
      <p class="mb-4"><%= @user.name %></p>
      <p class="mb-1 text-secondary">メールアドレス</p>
      <p class="mb-5"><%= @user.email %></p>
      <%= link_to 'プロフィール編集', edit_profile_path, class: 'btn btn-warning rounded-pill shadow mb-3' %>
      <%= link_to 'パスワード変更', new_password_reset_path, class: 'btn btn-warning rounded-pill shadow mb-3' %>
    </div>
  </div>
</div>