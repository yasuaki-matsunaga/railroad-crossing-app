<header>
  <nav class="navbar navbar-expand-lg navigation bg-white navbar-light fixed-top shadow">
    <div class="container-fluid">
      <%= link_to '/', class: 'navbar-brand' do %>
        <%= image_tag '仮logo.png' %>
      <% end %>
      <button class="navbar-toggler" type="button" aria-label="Toggle navigation" id="navbar-toggler">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto main-nav align-items-center gap-2">
          <li class="nav-item">
            <%= link_to posts_path, class: 'btn btn-warning rounded-pill shadow d-flex align-items-center gap-2', role: 'button' do %>
              <i class="bi bi-file-post"></i>
              <span>投稿一覧</span>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to logout_path, class: 'btn btn-warning rounded-pill shadow d-flex align-items-center gap-2', data: { turbo_method: :delete } do %>
              <i class="bi bi-box-arrow-left"></i>
              <span>ログアウト</span>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to profile_path, class: 'btn btn-warning rounded-pill shadow d-flex align-items-center gap-2' do %>
              <% if current_user.avatar.present? %>
                <%= image_tag current_user.avatar.url, class: 'rounded-circle', width: '25', height: '25' %>
              <% else %>
                <%= image_tag 'sample.jpg', class: 'rounded-circle', width: '25', height: '25' %>
              <% end %>
              <span><%= current_user.name %></span>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
