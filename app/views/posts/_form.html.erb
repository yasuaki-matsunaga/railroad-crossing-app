<%= form_with model: post, url: url, method: method do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="mb-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control border-0 shadow" %>
  </div>
  <div class="mb-3">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control border-0 shadow", rows: "10" %>
  </div>
  <div class="mb-3">
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list, value: @post.tag_list.join(','), class: "form-control border-0 shadow", id:'post_tag_list', placeholder: "タグをつける。複数つけるには「,」で区切ってください。" %>
  </div>
  <div class="mb-3">
    <%= f.label :crossing_image %>
    <%= f.file_field :crossing_image, class: "form-control border-0 shadow", accept: 'image/*' %>
    <%= f.hidden_field :crossing_image_cache %>
  </div>
  <div class='mb-4 w-50 d-flex mx-auto'>
    <%= image_tag post.crossing_image.url, class: 'rounded img-fluid' %>
  </div>
  <div class="d-flex justify-content-center">
    <%= f.submit nil, class: "btn btn-warning rounded-pill shadow px-4" %>
  </div>
<% end %>